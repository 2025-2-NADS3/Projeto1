<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Plano de fundo -->
    <ImageView
        android:id="@+id/fundoLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <!-- Botão de voltar para a tela de início -->
    <Button
        android:id="@+id/btnVoltarInicio"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="74dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/camposLogin"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Voltar para a tela inicial" />


    <!-- Campos necessários para logar o usuário -->
    <LinearLayout
        android:id="@+id/camposLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@id/btnVoltarInicio">

        <!-- Campo de entrar e-mail -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutEmail"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            style="@style/RoundedTextInput">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/campoEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:contentDescription="Digite seu email"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Campo de entrar senha -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutSenha"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleEnabled="true"
            style="@style/RoundedTextInput">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/campoSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:inputType="textPassword"
                android:contentDescription="Digite sua senha"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <!-- Botão de logar -->
    <Button
        android:id="@+id/btnLogar"
        android:layout_width="372dp"
        android:layout_height="58dp"
        android:text="Entrar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/btn_selector"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@id/btnIrCadastro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Faça login" />


    <!-- Botão de ir para a tela de cadastro -->
    <Button
        android:id="@+id/btnIrCadastro"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="260dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Cadastre-se" />


</androidx.constraintlayout.widget.ConstraintLayout>
