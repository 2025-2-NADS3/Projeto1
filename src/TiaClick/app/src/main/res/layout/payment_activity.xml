<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo">

    <!-- Título -->
    <TextView
        android:id="@+id/tituloPagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagamento"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Lista dos métodos -->
    <RadioGroup
        android:id="@+id/grupoPagamentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tituloPagamento">

        <RadioButton
            android:id="@+id/pagGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google Pay"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="@color/green"/>

        <RadioButton
            android:id="@+id/pagCredito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cartão de Crédito"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="@color/green"/>

        <RadioButton
            android:id="@+id/pagPaypal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paypal"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="@color/green"/>

        <RadioButton
            android:id="@+id/pagCarteira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saldo da Carteira"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="@color/green"/>

        <RadioButton
            android:id="@+id/pagDinheiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinheiro"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="@color/green"/>

    </RadioGroup>

    <!-- Total -->
    <LinearLayout
        android:id="@+id/containerTotalPag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnRealizarPagamento">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/valorTotalPagamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 0,00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/green"/>
    </LinearLayout>

    <!-- Botão Finalizar -->
    <Button
        android:id="@+id/btnRealizarPagamento"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Realizar Pagamento"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
