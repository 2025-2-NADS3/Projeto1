<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Imagem do item -->
    <ImageView
        android:id="@+id/imgItemCarrinho"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Nome (coluna items) -->
    <TextView
        android:id="@+id/nomeItemCarrinho"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pão de Queijo"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imgItemCarrinho"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/quantidadeItemCarrinho" />

    <!-- Quantidade (coluna Qtd) -->
    <TextView
        android:id="@+id/quantidadeItemCarrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x2"
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/precoItemCarrinho"
        android:layout_marginEnd="16dp" />

    <!-- Preço (coluna Preço) -->
    <TextView
        android:id="@+id/precoItemCarrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 9,50"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#228B22"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
